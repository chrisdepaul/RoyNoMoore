{
    "manifest_version": 2,
    "name": "Black Mirror Blocker",
    "version": "1.0",
    "description": "A Black Mirror-inspired extension that lets you block the names and faces of people you no longer want to see.",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js",
                "options.js",
                "thirdParty/jquery-3.2.1.min.js",
                "thirdParty/bootstrap.bundle.min.js"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "background":{"scripts": ["thirdParty/jquery-3.2.1.min.js", "thirdParty/bootstrap.bundle.min.js"]},
    "permissions": [
      "storage"
    ],
    "options_page": "options.html"
}